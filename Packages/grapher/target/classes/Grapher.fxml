<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.canvas.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<BorderPane fx:id="root" fx:controller="grapher.Controller" xmlns:fx="http://javafx.com/fxml">
	<padding><Insets top="10" right="10" bottom="10" left="10"/></padding>
	<top>
		<MenuBar fx:id="menubar">
		 	<menus>
				<Menu text="File">
					<items>
					</items>
				</Menu>
				<Menu text="Edit">
					<items>
					</items>
				</Menu>
				<Menu text="Examples">
					<items>
					</items>
				</Menu>
				<Menu text="Window">
					<items>
					</items>
				</Menu>
				<Menu text="Help">
					<items>
						<MenuItem text="Grapher Help"/>
						<SeparatorMenuItem/>
						<MenuItem text="Show Built-In Definitions"/>
					</items>
				</Menu>
			</menus>
		</MenuBar>
	</top>
	<center>
		<VBox fx:id="viewer" alignment="center">
			<Text fx:id="title" text="Title"/>
			<Canvas fx:id="canvas"/>
		</VBox>
	</center>
	<bottom>
		<HBox fx:id="footer" alignment="center">
			<Button fx:id="draw" text="Draw" onAction="#action"/>
			<TextField fx:id="function" promptText="Function"/>
		</HBox>
	</bottom>
</BorderPane>
